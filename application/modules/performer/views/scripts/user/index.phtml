        url: '<?= $this->baseUrl.'/sms/phone-verify'; ?>',
        data: {phoneNumber: phoneNumber, userId: userId},
        success: function(data){
            if(data == 'true'){
                $('#ModalSmsCode').modal('show');
                $('#smsPreloader').hide();
//                setTimeout(function() {
                    $('#sendSmsButton').show();
