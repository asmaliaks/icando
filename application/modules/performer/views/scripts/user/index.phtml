function verifyPhone(code){
    $.ajax({
        type: 'POST',
        url: '<?= $this->baseUrl.'/phone-activation/activate-account'; ?>',
        data: {code: code},
        success: function(data){
           data = JSON.parse(data);
           if(data.code == 'false'){
               $('#smsModalPreloader').hide();
               $('#modalCodeError').show();
           }else if(data.code == '1'){
                $.ajax({
                        type: 'POST',
                        url: '<?= $this->baseUrl.'/phone-activation/activate'; ?>',
                        data: {code: code},
                        success: function(data){
                            location.reload();
                         }
                     });
           }
         }
     });
}

