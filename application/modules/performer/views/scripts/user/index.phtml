function changeCategory(catId){ 
    if($('#check'+catId).is(':checked')){
        $('#prel'+catId).show();
        $.ajax({
          type: 'POST',
          url: '<?= $this->baseUrl.'/performer/settings/add-user-category'; ?>',
          data: {catId: catId},
          success: function(){
              $('#prel'+catId).hide();
          }
        });  
    }else{
    $('#prel'+catId).show();
        $.ajax({
          type: 'POST',
          url: '<?= $this->baseUrl.'/performer/settings/remove-users-category'; ?>',
          data: {catId: catId},
          success: function(data){
              $('#prel'+catId).hide();
          }
        });
    }

}
