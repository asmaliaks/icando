                var allowedSum = perPrice/100*10;
                if(allowedSum <= balance){
                    $('#price_char_error').hide(); 
                    $('#price_amount_error').hide(); 
                    $('#price_error').hide();
                    $('#propBut').removeAttr("disabled");
                }else{
                    $('#price_char_error').hide(); 
                    $('#price_amount_error').show(); 
                    $('#price_error').hide();
